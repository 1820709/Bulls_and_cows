<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="RESET" />

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_above="@id/lay_plus"
        android:text=""/>

    <LinearLayout
        android:id="@+id/lay_plus"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/lay_numbers"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_plus_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/plus"/>
        <Button
            android:id="@+id/btn_plus_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/plus"/>
        <Button
            android:id="@+id/btn_plus_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/plus"/>
        <Button
            android:id="@+id/btn_plus_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/plus"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_numbers"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/lay_minus"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_number_a"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="@string/one"
            android:text="1"/>
        <TextView
            android:id="@+id/txt_number_b"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/two"/>
        <TextView
            android:id="@+id/txt_number_c"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/three"/>
        <TextView
            android:id="@+id/txt_number_d"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/four"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_minus"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn_match"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_minus_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/minus"/>
        <Button
            android:id="@+id/btn_minus_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/minus"/>
        <Button
            android:id="@+id/btn_minus_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/minus"/>
        <Button
            android:id="@+id/btn_minus_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/minus"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/btn_reset"
        android:layout_above="@id/lay_plus"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_output"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/match"/>

</RelativeLayout>